# Application Settings
APP_NAME=SimulAI Business Game
DEBUG=true

# Database
DATABASE_URL=sqlite+aiosqlite:///./data/simulai.db

# Game Settings
INITIAL_PLAYER_MONEY=100000.0
QUARTERS_PER_GAME=12

# AI Settings (Optional - for AI-generated news)
# Get API keys from:
# - Anthropic: https://console.anthropic.com/
# - OpenAI: https://platform.openai.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
AI_PROVIDER=anthropic  # or "openai"

# API Settings
API_HOST=0.0.0.0
API_PORT=8000

# Frontend Ports
PLAYER_FRONTEND_PORT=8501
GAMEMASTER_FRONTEND_PORT=8502
DASHBOARD_FRONTEND_PORT=8503
